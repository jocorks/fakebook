<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.sex %></td>
    <td><%= user.birthday %></td>
    <td><%= user.high_school %></td>
    <td><%= user.college %></td>
    <td><%= user.company %></td>
    <td><%= user.city %></td>
    <td><%= user.state %></td>
    <td><%= user.website %></td>
    <td><%= user.fav_music %></td>
    <td><%= user.fav_book %></td>
    <td><%= user.fav_movie %></td>
    <td><%= user.fav_tv %></td>
    <td><%= user.fav_game %></td>
    <td><%= user.fav_sport %></td>
    <td><%= user.picture %></td>
    <td><%= user.wall_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
